<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="50dp"
    android:layout_marginBottom="100dp"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/dOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Ваш заказ"
            android:textColor="@color/insta4"
            android:textSize="22sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/d1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/dOrder"
            android:layout_marginTop="10dp"
            android:background="#F23C3F41" />

        <TextView
            android:id="@+id/dType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/d1"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="Тип заказа: Like"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dType"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:text="Ссылка:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dL"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:textSize="18sp"
            android:text="ыафавыфафыафыафавфыавфыафы" />


        <TextView
            android:id="@+id/dCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dLink"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:text="Кол-во: "
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dPr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dLink"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:text="Цена: "
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/dPr"
            android:layout_marginTop="15dp"
            android:background="#F23C3F41" />


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>